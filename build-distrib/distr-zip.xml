<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zipLinux</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/../addressbook-main/target/</directory>
            <outputDirectory>./modules/addressbook</outputDirectory>
            <includes>
                <include>addressbook.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../addressbook-main/</directory>
            <outputDirectory>./modules/addressbook</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../eureka-server/target/</directory>
            <outputDirectory>./modules/eureka-server</outputDirectory>
            <includes>
                <include>eureka-server.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../eureka-server/</directory>
            <outputDirectory>./modules/eureka-server</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../ignite-server/target/</directory>
            <outputDirectory>./modules/ignite-server</outputDirectory>
            <includes>
                <include>ignite-server.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../ignite-server/</directory>
            <outputDirectory>./modules/ignite-server</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../mongo-server/target/</directory>
            <outputDirectory>./modules/mongo-server</outputDirectory>
            <includes>
                <include>mongo-server.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../mongo-server/</directory>
            <outputDirectory>./modules/mongo-server</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../postgre-server/target/</directory>
            <outputDirectory>./modules/postgre-server</outputDirectory>
            <includes>
                <include>postgre-server.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../postgre-server/</directory>
            <outputDirectory>./modules/postgre-server</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../</directory>
            <outputDirectory>./config</outputDirectory>
            <includes>
                <include>docker-compose.yml</include>
                <include>docker-compose-ignite.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>